{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://cambermast.com/schemas/campaigns.schema.json",
	"title": "Cambermast Campaign Registry",
	"type": "object",
	"additionalProperties": false,
	"required": ["version", "campaigns"],
	"properties": {
		"version": {
			"type": "integer",
			"minimum": 1
		},
		"campaigns": {
			"type": "array",
			"items": { "$ref": "#/$defs/campaign" }
		}
	},
	"$defs": {
		"campaign": {
			"type": "object",
			"additionalProperties": false,
			"required": ["id", "partner", "landingPath", "description", "createdAt", "params"],
			"properties": {
				"id": {
					"type": "string",
					"description": "Short, kebab-case campaign identifier (or 6-char base36 id).",
					"pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
				},
				"partner": {
					"type": "string",
					"description": "Stable partner identifier used for grouping and partner URL slugs (prefer kebab-case).",
					"minLength": 1
				},
				"partnerLabel": {
					"type": "string",
					"description": "Optional display name for the partner (e.g. “TechLAB”).",
					"minLength": 1
				},
				"landingPath": {
					"type": "string",
					"description": "Site path that receives the traffic.",
					"pattern": "^/.*"
				},
				"description": {
					"type": "string",
					"minLength": 1
				},
				"createdAt": {
					"type": "string",
					"format": "date-time"
				},
				"archived": {
					"type": "boolean",
					"description": "Optional manual archive override for campaign registry views."
				},
				"params": {
					"type": "object",
					"additionalProperties": {
						"type": "string"
					},
					"required": ["utm_source", "utm_medium", "utm_campaign", "utm_content", "src", "ad"],
					"properties": {
						"utm_source": { "type": "string" },
						"utm_medium": { "type": "string" },
						"utm_campaign": { "type": "string" },
						"utm_content": {
							"type": "string",
							"description": "Short, kebab-case value that mirrors the campaign intent.",
							"pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
						},
						"src": { "type": "string" },
						"ad": { "type": "string" }
					}
				}
			}
		}
	}
}
