{
	"$schema": "https://json-schema.org/draft/2020-12/schema",
	"$id": "https://cambermast.com/schemas/tools.schema.json",
	"title": "Cambermast Tools Registry",
	"type": "array",
	"items": {
		"type": "object",
		"additionalProperties": false,
		"required": [
			"id",
			"title",
			"description",
			"route",
			"icon",
			"category",
			"status",
			"features",
			"publishedDate"
		],
		"properties": {
			"id": {
				"type": "string",
				"pattern": "^[a-z0-9]+(?:-[a-z0-9]+)*$"
			},
			"title": { "type": "string", "minLength": 1 },
			"description": { "type": "string", "minLength": 1 },
			"route": { "type": "string", "pattern": "^/tools/[a-z0-9]+(?:-[a-z0-9]+)*$" },
			"icon": { "type": "string", "minLength": 1 },
			"category": { "type": "string", "minLength": 1 },
			"status": { "type": "string", "enum": ["active", "beta", "coming-soon"] },
			"features": {
				"type": "array",
				"minItems": 1,
				"items": { "type": "string", "minLength": 1 }
			},
			"publishedDate": { "type": "string", "format": "date" }
		}
	}
}
